PERSONAJE bot PARAM mapa
    HAZ esperar 0.6
    CONSOLA "primera vez"
    HAZ esperar 0.9
    CONSOLA "segunda vez"

    FUNC esperar PARAM tiempo
        demora = 0.6
        t = 0.0
        MIENTRAS t <= demora HAZ
            CONSOLA "t: " t
            t = t + DELTA
        FIN
    RET NULO
    CONSOLA "fin"
FIN
